<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/dl_maincontainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <TextView
            android:id="@+id/dl_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_alignParentTop="true"
            android:textColor="?attr/colorTextLight"
            android:textSize="@dimen/fcmain_mediumdevice_textsize_xl"/>

    <LinearLayout
            android:id="@+id/dl_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="24dp"
            android:layout_below="@id/dl_heading"
            android:weightSum="10"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

        <ImageView
                android:id="@+id/dl_icon"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="22dp"
                android:layout_gravity="center"
                android:gravity="center"/>

        <TextView
                android:id="@+id/dl_label"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:textColor="?attr/colorTextLight"
                android:textSize="@dimen/fcmain_mediumdevice_textsize_large"
                android:gravity="center"
                android:layout_marginBottom="2dp"
                android:layout_gravity="center"
                android:textAlignment="center"/>

        <ImageView
                android:id="@+id/dl_chart"
                android:layout_width="0dp"
                android:layout_weight="7"
                android:layout_height="22dp"
                android:layout_gravity="left"
                android:scaleType="fitXY"
                android:gravity="left"/>

    </LinearLayout>

</RelativeLayout>